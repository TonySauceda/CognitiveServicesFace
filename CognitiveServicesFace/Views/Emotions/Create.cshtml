@model CognitiveServicesFace.Models.EmotionModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>EmotionModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Score" class="control-label"></label>
                <input asp-for="Score" class="form-control" />
                <span asp-validation-for="Score" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FaceId" class="control-label"></label>
                <select asp-for="FaceId" class ="form-control" asp-items="ViewBag.FaceId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                @*<select asp-for="Type" class="form-control"></select>*@
                @Html.DropDownListFor(m=>m.Type, Html.GetEnumSelectList<EmotionEnum>(), "", new { @class = "form-control" })
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
